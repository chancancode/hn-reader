<div class="app-bar">
  <div class="gutter" {{action "toggleNavBar"}}>
    <i class="icon-menu {{if showingNavBar "rotate-cw"}}"></i>
  </div>
  <h1>Hacker News</h1>
</div>

<div class="app-bar-shadow"></div>

<nav class="app-nav app-panel">
  {{#link-to "stories" (query-params filter="front-page") title="Front Page"}}
    <div class="gutter"><i class="icon-news"></i></div> Front Page
  {{/link-to}}

  {{#link-to "stories" (query-params filter="latest") title="Latest Submissions"}}
    <div class="gutter"><i class="icon-hour-glass"></i></div> Latest Submissions
  {{/link-to}}

  {{#link-to "stories" (query-params filter="active") title="Active"}}
    <div class="gutter"><i class="icon-thermometer"></i></div> Active
  {{/link-to}}

  {{#link-to "stories" (query-params filter="show-hn") title="Show HN"}}
    <div class="gutter"><i class="icon-modern-mic"></i></div> Show HN
  {{/link-to}}

  {{#link-to "stories" (query-params filter="ask-hn") title="Ask HN"}}
    <div class="gutter"><i class="icon-help"></i></div> Ask HN
  {{/link-to}}

  {{#link-to "stories" (query-params filter="jobs") title="Jobs"}}
    <div class="gutter"><i class="icon-suitcase"></i></div> Jobs
  {{/link-to}}

  <div class="spacer"></div>

  {{#link-to "preferences" title="Preferences"}}
    <div class="gutter"><i class="icon-tools"></i></div> Preferences
  {{/link-to}}
</nav>

<div class="app-main {{if showingNavBar "slide-out"}}">
  {{outlet}}
</div>

<footer>
  {{#link-to "about"}}<i class="icon-info"></i> About HN Reader{{/link-to}}
</footer>